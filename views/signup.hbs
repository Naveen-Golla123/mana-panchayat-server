<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        
        <!-- <meta name="color-scheme" content="dark light"> -->

        <title>Mana Panchayat | SignUp</title>

        <!-- Local CSS Link -->
        <link rel="stylesheet" href="./css/style.css">

        <!-- Bootstrap Links -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script> 

        <!-- Fontawesome Link -->
        <script src="https://kit.fontawesome.com/1a2b0738bb.js" crossorigin="anonymous"></script>

    </head>

    <body>

        <div class="main-container d-flex justify-content-center align-items-center bg-light">

            <!-- SignUp Form -->
            <div id="signupFormContainer" class="box-container bg-white shadow">
                <div class="row">
                    <div class="col-12 p-5">
                        <h4 class="">Sign Up</h4>
                        <hr />
                        <form id="signupForm">

                            <div class="form-row">
                                <!-- First Name -->
                                <div class="form-group col-md-6">
                                    <div class="d-flex justify-content-between">
                                        <label for="firstNameErrMsg">First Name</label>
                                        <span id="firstNameErrMsg" class="text-danger text-right"></span>
                                    </div>
                                    <input type="text" class="form-control" id="firstName" placeholder="First Name">

                                </div>

                                <!-- Last Name -->
                                <div class="form-group col-md-6">
                                    <div class="d-flex justify-content-between">
                                        <label for="lastName">Last Name</label>
                                        <span id="lastNameErrMsg" class="text-danger text-right"></span>
                                    </div>
                                    <input type="text" class="form-control" id="lastName" placeholder="Last Name">
                                </div>
                            </div>
                            <!-- Username -->
                            <div class="form-group">
                                <div class="d-flex justify-content-between">
                                    <label for="signupUsername">Username</label>
                                    <span id="signupUsernameErrMsg" class="text-danger text-right"></span>
                                </div>
                                <input type="text" class="form-control" id="signupUsername" placeholder="Set your Username ">
                            </div>
                            <!-- Password -->
                            <div class="form-group">
                                <div class="d-flex justify-content-between">
                                    <label for="signupPassword">Password</label>
                                    <span id="signupPasswordErrMsg" class="text-danger text-right"></span>
                                </div>

                                <input type="password" class="form-control" id="signupPassword" placeholder="Enter New Password">
                            </div>
                            <!-- Mobile Number -->
                            <div class="form-group">
                                <div class="d-flex justify-content-between">
                                    <label for="signupMobile">Mobile</label>
                                    <span id="signupMobileErrMsg" class="text-danger text-right"></span>
                                </div>

                                <input type="text" class="form-control" id="signupMobile" placeholder="Your Mobile Number">
                            </div>

                            <button id="signUpButton" type="submit" class="btn btn-dark btn-block">Sign Up</button>
                            <div class="text-center mt-3">
                                <label class="form-check-label" for="gridCheck">
                                    Already Signed Up? <span id="loginClick" class="text-danger cursor-point"> <a href="{{env}}/Auth">Login Now</a> </span>
                                </label>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>

        <!-- Local Js Link -->
        <script src="./js/signup.js" type="text/javascript"></script>


    </body>
</html>