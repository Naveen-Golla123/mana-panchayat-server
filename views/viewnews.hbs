<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Share Title and Imge Meta data -->
    <meta property="og:title" content="{{title}}">
    <meta property="og:description" content="{{newsDescription}}">
    <meta property="og:image"
        content="{{imgUrl}}">
    <meta property="og:image:width" content="250">
    <meta property="og:image:height" content="250">
    <meta property="og:image:type" content="image/jpeg">
    <meta property="og:type" content="website">
    <!-- <meta name="color-scheme" content="dark light"> -->
    <!-- Local CSS Link -->
    <link rel="stylesheet" href="./css/style.css">

    <!-- Bootstrap Links -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

    <!-- Fontawesome Link -->
    <script src="https://kit.fontawesome.com/1a2b0738bb.js" crossorigin="anonymous"></script>

</head>

<body>

    <div class="container mt-5" style="max-width:50rem">

        <!-- Both Side by Side Boxes -->
        <div class="grid-box">

            <!-- Left Side Box -->
            <div class="">

                <!-- Blog Post Section (Title, Author & Time, News Content) -->
                <div id="blogPostArea">
                    <h1 id="newsTitle" class="my-3"></h1>
                    <hr>
                    <div class="mb-3 text-secondary d-flex justify-content-between">
                        <div class="p-1">
                            <i class="fa-solid fa-user mr-2"></i>By <span id="authorName">{{firstname}}
                                {{lastname}}</span>
                            <i class="fa-solid fa-calendar-days mx-2"></i> <span id="publishedDate">{{createOnDate}}
                            </span>
                        </div>
                        <div class="border p-1 px-3 cursor-point" data-toggle="modal" data-target="#sharePopUpModal">
                            <i class="fa-solid fa-share-nodes mr-2"></i>Share
                        </div>

                    </div>

                    <img class="w-100 mb-4" id="imgContainer" src={{imgUrl}}></img>

                    <div id="newsContent">{{{newsDescription}}}</div>

                    <div class="my-5">
                        <hr>
                    </div>

                </div>

                <!-- Tags -->
                <!-- <div class="tags-container">
                        
                        <ul>
                            <li> <i class="fa-solid fa-tags"></i> Tags</li>
                            <li>Technology</li>
                            <li>Sports</li>
                            <li>Poltical</li>
                            <li>Educaion</li>
                            <li>Village Updates</li>
                        </ul>
                    </div> -->

                <!-- Share -->
                <!-- <div class="share-container my-5">
                        
                        <ul>
                            <li> <i class="fa-solid fa-share-nodes"></i> Share</li>
                            <li> <i class="fa-brands fa-whatsapp"></i> WhatsApp</li>
                            <li> <i class="fa-brands fa-facebook-f"></i> Facebook</li>
                            <li> <i class="fa-brands fa-twitter"></i> Twitter</li>
                            <li data-toggle="modal" data-target="#sharePopUpModal"> <i class="fa-solid fa-share-nodes"></i> Share to other</li>
                        </ul>
                    </div> -->

                <!-- Share Pop Modal -->
                <div class="modal fade" id="sharePopUpModal" tabindex="-1" role="dialog"
                    aria-labelledby="sharePopUpModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Share to other apps</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body share_body">

                                <ul>
                                    <!-- <li> <i class="fa-brands fa-instagram"></i> Instagram</li> -->
                                    <a target="_blank"
                                        href="https://api.whatsapp.com/send?text=file:///E:/_Jayakrishna/mana_panchayat/mana-panchayat/view_post.html?id=142">
                                        <li> <i class="fa-brands fa-whatsapp"></i> WhatsApp</li>
                                    </a>
                                    <!-- <li> <i class="fa-brands fa-facebook-f"></i> Facebook</li>
                                    <li> <i class="fa-brands fa-twitter"></i> Twitter</li>
                                    <li> <i class="fa-brands fa-telegram"></i> Telegram</li>
                                    <li> <i class="fa-brands fa-pinterest"></i> Pinterest</li>
                                    <li> <i class="fa-brands fa-reddit-alien"></i> Reddit</li>
                                    <li> <i class="fa-regular fa-envelope"></i> Mail</li> -->
                                </ul>

                            </div>

                            <div>
                                <hr>
                            </div>

                            <div class="input-group mb-3 p-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i
                                            class="fa-solid fa-link"></i></span>
                                </div>
                                <input id="urlCopy" type="text" class="form-control" placeholder="Url"
                                    aria-label="Share Link" aria-describedby="basic-addon1">
                                <button id="postUrlCopyButton" class="btn btn-dark"> <i
                                        class="fa-regular fa-copy mr-2"></i> Copy</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Previous & Next Page Buttons -->
                <div class="d-flex justify-content-between">
                    <button class="btn btn-outline-dark">
                        <i class="fa-solid fa-chevron-left mr-2"></i>Previous
                    </button>
                    <button class="btn btn-outline-dark">
                        Next <i class="fa-solid fa-chevron-right ml-2"></i>
                    </button>
                </div>

            </div>

            <!-- Right Side Box -->
            <div class="">

                <!-- Widget 1 (Labels)
                    <div class="bg-light border p-1">
                        <h5>Labels</h5> -->
                <!-- Tags -->
                <!-- <div class="tags-container">

                            <ul>
                                <li>Technology</li>
