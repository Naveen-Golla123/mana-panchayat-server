    <div class="container mt-5">

        <h4 class="font-weight-bold">Recent Posts</h4>

        <div id="allPosts">
            <div id="holder">
                {{#each data}}


                <div class="row boder mt-3 py-3" id="news_${result[each].id}">
                    <div class="col-3">
                        <img class="w-100 h-auto" src={{this.imgUrl}} alt="" srcset="">
                    </div>
                    <div class="col-9">
                        <h5 class="font-weight-bold">{{this.title}}</h5>
                        <div class="mt-3" style="max-height:50px; overflow:hidden;">
                            <p class="">{{{this.newsDescription}}}</p>
                        </div>

                        <div class="d-flex justify-content-between mt-3">


                            <a href={{readMeBlock this.id}} target="_blank" class="text-primary p-0">Read
